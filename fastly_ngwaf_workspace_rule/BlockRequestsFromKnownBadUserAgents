resource "fastly_ngwaf_workspace_rule" "BlockRequestsFromKnownBadUserAgents" {
    description     = "Block Requests from Known Bad User Agents"
    enabled         = false
    group_operator  = "any"
    request_logging = "sampled"
    type            = "request"
    workspace_id    = fastly_ngwaf_workspace.my_ngwaf_workspace.id

    action {
        allow_interactive = false
        deception_type    = null
        redirect_url      = null
        response_code     = 0
        signal            = null
        type              = "block"
    }

    condition {
        field    = "user_agent"
        operator = "like"
        value    = "*[Nn][Mm][Aa][Pp]*"
    }
    condition {
        field    = "user_agent"
        operator = "like"
        value    = "*[Cc][Uu][Rr][Ll]*"
    }
    condition {
        field    = "user_agent"
        operator = "like"
        value    = "*[Pp][Yy][Tt][Hh][Oo][Nn]*"
    }
    condition {
        field    = "user_agent"
        operator = "like"
        value    = "*[Ff][Aa][Ss][Tt]-[Ww]eb[Cc]rawler*"
    }
    condition {
        field    = "user_agent"
        operator = "like"
        value    = "*[Bb]aidu[Ss]pider*"
    }
    condition {
        field    = "user_agent"
        operator = "like"
        value    = "*[Bb]aidu[Mm]obaider*"
    }
    condition {
        field    = "user_agent"
        operator = "like"
        value    = "*[Bb]aidu[Ii]mage[Ss]pider*"
    }
}
